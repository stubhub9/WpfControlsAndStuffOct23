<Window x:Class="WpfControlsAndStuffOct23.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlsAndStuffOct23"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ProgressBar Template="{StaticResource progressBarPieTemplate}"
                         Width="100" Height="100" Value="66"
                         Foreground="Red"/>
            <ProgressBar Style="{StaticResource pieStyle}"
                         Width="100" Height="100" Value="25"/>
            <ProgressBar Style="{StaticResource pieStyle}"
                         Width="100" Height="100" Value="85"/>

        </StackPanel>

    </Grid>
</Window>
